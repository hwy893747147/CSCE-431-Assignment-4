<table>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.author, book_path(book) %></td>
      <td><%= button_to 'Edit', edit_book_path(book), method: 'get'%></td>
      <td><%= button_to 'Remove', book_path(book), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<%= link_to "Add a New Book", new_book_path %>
